{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Distribution of Power Plant Around the World",
  "width": 1600,
  "height": 900,
  "layer": [
    {
      "data": { 
        "url": "https://raw.githubusercontent.com/ChuaJunJie/3179/main/data/ne_110m_admin_0_countries.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "projection": {"type": "equalEarth"},
      "mark": {
        "type": "geoshape",
        "fill": "#eee",
        "stroke": "#757575",
        "strokeWidth": 0.5
      }
    },
    {
      "data": { 
        "url": "https://raw.githubusercontent.com/ChuaJunJie/3179/main/w9%20homework/data/powerplants%20(global)%20-%20global_power_plants_modified.csv"
      },
      "mark": {
        "type": "circle"
      },
      "encoding": {
        "latitude": {
          "field": "latitude",
          "type": "quantitative"
        },
        "longitude":{
          "field": "longitude",
          "type": "quantitative"
        },
        "color": {
          "field": "primary_fuel",
          "type": "nominal",
          "title": "Primary Fuel"
        },
        "opacity": {"value": 0.5},
        "size": {"value": 3},
        "tooltip": [
          {"field": "country_long", "type": "nominal", "title": "Country"},
          {"field": "name of powerplant", "type": "nominal", "title": "Name of Power Plant"},
          {"field": "capacity in MW", "type": "quantitative", "title": "Capacity in MW"},
          {"field": "primary_fuel", "type": "nominal", "title": "Primary Fuel"}
        ]
      }
    }
  ]
}