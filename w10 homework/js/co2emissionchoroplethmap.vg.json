{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "config": {"background": null, "view": {"stroke": null}},
    "width": 800,
    "height": 400,
    "data": {
        "url": "https://raw.githubusercontent.com/ChuaJunJie/3179/main/data/co2_emissions_kt_by_country.csv"
    },
    "transform": [
      {
        "lookup": "country_code",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/ChuaJunJie/3179/main/data/maps/ne_110m.json",
            "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
          },
          "key": "properties.ISO_A3",
          "fields": ["properties", "type", "geometry"]
        }
      },
      {"filter": "datum.year==year"}
    ],
    "params": [
      {
        "name": "year",
        "value": 1989,
        "bind": {
          "input": "range",
          "min": 1960,
          "max": 2019,
          "step": 1,
          "name": "Select the year:"
        }
      }
    ],
    "projection": {"type": "equalEarth"},
    "mark": {"type": "geoshape", "stroke": "#757575",
    "strokeWidth": 0.5},
    "encoding": {
      "color": 
      {
        "field": "value", 
        "type": "quantitative" , 
        "scale": {"domain": [50,1000000000], "type": "log", "scheme": "orangered"},
        "title": "CO2 Emission (kt)"
      },
      "tooltip": [
        {"field": "properties.NAME", "type": "nominal", "title": "Country"},
        {"field": "value", "type": "quantitative", "format": ".2f", "title": "CO2 Emission (in kt)"}
      ]
    }
  }